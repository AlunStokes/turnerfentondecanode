<div class="container-fluid" id="body-content">
  <div class="login">
    <div class="login-screen">
      <div class="app-title">
        <h1 class="login-title">Change Password</h1>
      </div>
      <div class="login-form">
        <form action="/reset-password" method="post" id="reset-password-form">
          <input type="hidden" name="resetCode" value="{{resetCode}}">
          <div class="control-group">
            <input type="password" class="login-field text thin" value="" placeholder="password" id="password" name="password">
          </div>
          <div class="control-group">
            <input type="password" class="login-field text thin" value="" placeholder="password (confirm)" id="password-confirm" name="passwordConfirm">
          </div>

          <button class="btn btn-outline text thin" href="#">change password</button>
        </form>
        {{#each errors}}
        <p class="text thin light small">
          {{this}}
        </p>
        {{/each}}
        <hr>
        <a class="login-link text thin" href="login">Login</a>
      </div>
    </div>
  </div>
</div>
