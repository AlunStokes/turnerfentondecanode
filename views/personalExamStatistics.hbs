{{#if fullwidth}}
<div class="container-fluid" id="top-div">
{{else}}
<div class="container" id="top-div">
{{/if}}

  <div class="row">
    <div class="col-lg-4 col-xs-12">
      <h1 class="text thin large left dark">{{name}}</h1>
      <br>
    </div>
  </div>

  <div class="row">
    {{>cards/userClusterProficiencyCard}}
    {{>cards/userExamResultsLineCard}}
  </div>

  <!-- Exam results chart -->
  <div class="box">
    <div class="box-header">
    </div>
  </div>
  <div class="box-body">
    <table id="exam-results-table" class="table table-bordered table-hover">
      <thead>
        <tr>
          <th>Date</th>
          <th>Score</th>
          <th>Total</th>
          <th>Percentage</th>
          <th>Exam Name</th>
          <th>Cluster</th>
        </tr>
      </thead>
      <tbody id="table-body">
        {{#each examResults}}
        <tr>
          <td>{{this.date}}</td>
          <td>{{this.correct}}</td>
          <td>{{this.total}}</td>
          <td>{{this.percentage}}%</td>
          <td>{{this.name}}</td>
          <td>{{this.cluster}}</td>
        </tr>
        {{/each}}
      </tbody>
      <tfoot id="table-footer">
        <tr>
          <th>Date</th>
          <th>Score</th>
          <th>Total</th>
          <th>Percentage</th>
          <th>Exam Name</th>
          <th>Cluster</th>
        </tr>
      </tfoot>
    </table>
  </div>


</div>

<style media="screen">
.btn-group {
  display: inline;
}
#exam-results-table_wrapper {
  margin-bottom: 20px;
}
</style>
