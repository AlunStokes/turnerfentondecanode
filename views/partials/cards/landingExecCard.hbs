<div class="col-lg-3 col-sm-4 col-xs-12">
  <div class="card">
    <img src="{{this.imgPath}}" alt="{{this.name}}" style="width:100%">
    <div class="card-container" data-cluster="{{this.decaCluster}}">
      <br>
      <h1 class="text medium normal left dark">{{this.name}}</h1>
      <h1 class="text small normal left dark"><i>{{this.position}}</i></h1>
      <br>
      <p class="text small thin left dark">{{this.decaEvent}} - {{this.decaCluster}}</p>
      <br>
      <div class="row">
        {{#for this.numPlaques}}
          <div class="col-lg-3 col-xs-3">
            {{>plaqueSVG}}
          </div>
        {{/for}}
      </div>
      <br>
      <div class="row">
        {{#for this.numMedals}}
          <div class="col-lg-2 col-xs-2">
            {{>medalSVG}}
          </div>
        {{/for}}
      </div>
    </div>
  </div>
</div>

<style media="screen">
[data-cluster="Business Admin"] {
  background-color: #fbcf62;
}
[data-cluster="Marketing"] {
  background-color: #db6a66;
}
[data-cluster="Hospitality"] {
  background-color: #4d8bb5;
}
[data-cluster="Finance"] {
  background-color: #47a972;
}
</style>
