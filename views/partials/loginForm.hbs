<div class="login-screen">
  <div class="app-title">
    <h1 class="login-title">Login</h1>
  </div>
  <div class="login-form">
    <form action="/login" method="post" id="login-form">
      <div class="control-group">
        <input type="text" class="login-field text thin" value="" placeholder="student number" id="student-number" name="studentNumber">
      </div>
      <div class="control-group">
        <input type="password" class="login-field text thin" value="" placeholder="password" id="password" name="password">
      </div>
      <button class="btn btn-outline text thin" href="#">login</button>
    </form>
    {{#each errors}}
    <p class="text thin light small">
      {{this}}
    </p>
    {{/each}}
    <hr>
    <a class="login-link text thin" href="reset-password">Lost your password?</a>
  </div>
</div>
